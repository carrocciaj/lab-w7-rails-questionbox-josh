

<p>Title: <%= @question.title %></p>
 
<p>Question: <%= markdown(@question.question) %></p>


<% if current_user && current_user.id == @question.user_id %>
<%= link_to "Delete", question_path(@question), method: :delete %>
<% end %>


<h3>Potential Answers!</h3>
<% @question.answers.each do |answer| %>
  <div class="border">
  <div>
  <%= markdown(answer.solution) %>
  </div>
  <div>
  <%= answer.user.username %>
  </div>
  <%= form_with model: [@question, answer], method: :put, local: true do |f| %>
    <%= f.label "Correct Answer" %>
    <%= f.check_box :correct_answer, value: true %>
    <%= f.submit %>
  <% end %>
  <%= answer.correct_answer %>
  </div>
<% end %>
<div>
<% if current_user %>
<%= link_to "New Answer", new_question_answer_path(@question) %>
<% end %>
</div>
<div>
<%= link_to "Home", root_path %>
</div>



